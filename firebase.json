{
  "functions": {
    "source": "src/functions",
    "runtime": "nodejs16"
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/eudcc-reader/**",
        "destination": "/eudcc-reader/"
      },
      {
        "source": "/planet-age/**",
        "destination": "/planet-age/"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
