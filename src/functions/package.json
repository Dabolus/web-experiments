{
  "name": "@webexp/functions",
  "version": "0.0.0",
  "main": "lib/index.js",
  "repository": "git@github.com:Dabolus/web-experiments.git",
  "author": "Giorgio Garasto <giorgio@garasto.me>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "run-p watch:esbuild watch:firebase",
    "watch:esbuild": "yarn esbuild --watch --sourcemap=inline src/index.ts",
    "watch:firebase": "wait-on lib/index.js && NODE_ENV=development firebase emulators:start",
    "build": "yarn esbuild --minify --sourcemap src/index.ts",
    "esbuild": "esbuild --platform=node --target=node18 --outdir=lib --format=esm --bundle --external:firebase-functions --external:firebase-admin"
  },
  "dependencies": {
    "firebase-admin": "^11.10.1",
    "firebase-functions": "^4.4.1",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "esbuild": "^0.18.15",
    "firebase-functions-test": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "wait-on": "^7.0.1"
  },
  "engines": {
    "node": "18"
  }
}
